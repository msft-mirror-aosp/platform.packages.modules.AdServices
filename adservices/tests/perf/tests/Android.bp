package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

filegroup {
    name: "adservices-scenario-tests-sources",
    srcs: ["src/**/*.java"],
    visibility: [
        "//packages/modules/AdServices/adservices/tests/perf:__subpackages__",
        "//vendor:__subpackages__",
    ],
}

java_defaults {
    name: "AdServicesScenarioTestsDefault",
    static_libs: [
        "androidx.test.runner",
        "androidx.test.rules",
        "adservices-assets",
        "collector-device-lib-platform",
        "common-platform-scenarios",
        "common-platform-scenario-tests",
        "guava",
        "health-testing-utils",
        "microbenchmark-device-lib",
        "platform-test-options",
        "platform-test-rules",
        "adservices-test-scenarios",
        "adservices-test-utility",
        "adservices-ui-cts-root-test-lib",
        "ub-uiautomator",
        "handheld-app-helpers",
        "framework-adservices-lib",
        "adservices-test-fixtures",
        "adservices-device-collectors-lib",
        "hamcrest-library",
    ],
    // Certificate and platform api is needed for collector-device-lib-platform.
    certificate: "platform",
    platform_apis: true,
    srcs: [":adservices-scenario-tests-sources"],
    data: [":perfetto_artifacts"],
    resource_dirs: [
        "res",
    ],
    test_suites: [
        "device-tests",
        "general-tests",
    ],
    min_sdk_version: "30",
}

android_test {
    name: "AdServicesScenarioTests",
    defaults: ["AdServicesScenarioTestsDefault"],
    lint: {
        extra_check_modules: ["AdServicesTestLintChecker"],
        test: false, // TODO(b/343741206): remove when checks will run on android_test
    },
}
