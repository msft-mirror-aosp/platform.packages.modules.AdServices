package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

android_test {
    name: "AdServicesFrameworkUnitTests",
    defaults: ["AdServicesFrameworkUnitTests-defaults"],
    srcs: [
        "src/**/*.java",
    ],
    min_sdk_version: "Tiramisu",
    target_sdk_version: "Tiramisu",
    test_suites: [
        "general-tests",
        "mts-adservices",
    ],
}

android_test {
    name: "AdExtServicesFrameworkUnitTests",
    defaults: ["AdServicesFrameworkUnitTests-defaults"],
    srcs: [
        "src/**/*.java",
    ],
    libs: [
        "android.ext.adservices",
    ],
    min_sdk_version: "31",
    target_sdk_version: "31",
    test_config: "AndroidTest.ExtServices.xml",
    instrumentation_for: "ExtServices-sminus",
    test_suites: [
        "general-tests",
        "mts-extservices",
    ],
    lint: {
        baseline_filename: "lint-baseline-adextservices.xml",
    },
}

android_test {
    name: "AdExtServicesFrameworkRvcUnitTests",
    defaults: ["AdServicesFrameworkUnitTests-defaults"],
    srcs: [
        "src/android/adservices/common/AndroidRCommonUtilRvcTest.java",
    ],
    libs: [
        "android.ext.adservices",
    ],
    min_sdk_version: "30",
    max_sdk_version: "30",
    target_sdk_version: "30",
    test_config: "AndroidTest.ExtServicesRvc.xml",
    manifest: "AndroidManifestExtServicesRvc.xml",
    instrumentation_for: "ExtServices-sminus",
    test_suites: [
        "general-tests",
        "mts-extservices",
    ],
    lint: {
        extra_check_modules: ["AdServicesTestLintChecker"],
        test: false, // TODO(b/343741206): remove when checks will run on android_test
    },
}

java_defaults {
    name: "AdServicesFrameworkUnitTests-defaults",
    defaults: ["adservices-extended-mockito-defaults"],
    static_libs: [
        "androidx.test.runner",
        "androidx.test.core",
        "truth",
        "adservices-test-fixtures",
        "adservices-test-utility",
    ],
    libs: [
        "framework-adservices.impl",
        "framework-sdksandbox.impl",
        "framework-annotations-lib",
    ],
    sdk_version: "module_current",
    instrumentation_for: "AdServicesApk",
    lint: {
        extra_check_modules: ["AdServicesTestLintChecker"],
        test: false, // TODO(b/343741206): remove when checks will run on android_test
    },
}
