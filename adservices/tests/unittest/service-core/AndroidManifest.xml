<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.adservices.servicecoretest" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!-- Needed to schedule MDD jobs to persist across device reboots  -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <!-- Used in end-to-end tests -->
    <uses-permission android:name="android.permission.ACCESS_ADSERVICES_PROTECTED_SIGNALS"/>

    <!-- android:debuggable="true is needed. See b/228384531 -->
    <application
        android:debuggable="true"
        android:networkSecurityConfig="@xml/network_security_config">
        <property android:name="android.adservices.AD_SERVICES_CONFIG"
                  android:resource="@xml/ad_services_config" />

        <service android:name=
                     "com.android.adservices.service.MaintenanceJobService"
                 android:permission="android.permission.BIND_JOB_SERVICE">
        </service>
        <!-- MDD Service Job. Must be defined here in order to schedule them in Tests. -->
        <service android:name=
            "com.android.adservices.download.MddJobService"
            android:permission="android.permission.BIND_JOB_SERVICE">
        </service>
        <!-- Cobalt Logging Job -->
        <service
            android:name="com.android.adservices.cobalt.CobaltJobService"
            android:permission="android.permission.BIND_JOB_SERVICE">
        </service>

        <!-- AdPackageDenyPreProcess Job -->
        <service
            android:name="com.android.adservices.service.common.AdPackageDenyPreProcessJobService"
            android:permission="android.permission.BIND_JOB_SERVICE">
        </service>
        <provider
            android:name="com.android.adservices.common.AdServicesTestingProvider"
            android:authorities="com.android.adservices.provider.testing"
            android:exported="false"
        />
        <uses-library android:name="android.ext.adservices" android:required="false" />
    </application>
    <instrumentation
        android:name="androidx.test.runner.AndroidJUnitRunner"
        android:targetPackage="com.android.adservices.servicecoretest" >
    </instrumentation>
</manifest>
