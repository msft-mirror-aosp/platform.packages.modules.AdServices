package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

filegroup {
    name: "adservices-fixtures-sources",
    srcs: [
        "java/**/*.java",
    ],
    path: "java",
    visibility: [
        "//packages/modules/AdServices/adservices/tests:__subpackages__",
    ],
}

java_library {
    name: "adservices-test-fixtures",
    sdk_version: "module_current",
    min_sdk_version: "Tiramisu",
    srcs: [
        ":adservices-fixtures-sources",
    ],
    plugins: [
        "auto_value_plugin",
        "auto_annotation_plugin",
    ],
    libs: [
        "framework-adservices.impl",
        "framework-configinfrastructure",
        "adservices-service-core",
        "auto_value_annotations",
        "framework-annotations-lib",
    ],
    static_libs: [
        "adservices-service-core",
        "androidx.test.rules",
        "androidx.test.core",
        "modules-utils-build",
        "mockito-target-extended-minus-junit4",
        "mockwebserver",
        "truth",
        "adservices-test-utility",
    ],
    apex_available: ["com.android.adservices"],
    lint: {
        extra_check_modules: ["AdServicesLintChecker"],
        disabled_checks: ["MissingAndroidProcessInAdExtServicesManifest"],
        baseline_filename: "lint-baseline.xml",
        test: false, // TODO(b/343741206): remove when checks will run on android_test
    },
}
