package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

filegroup {
    name: "adservices-test-utility-sources",
    srcs: [
        "java/**/*.java",
    ],
    exclude_srcs: [
        "java/com/android/adservices/mockito/*.java",
    ],
    path: "java",
    visibility: [
        "//packages/modules/AdServices:__subpackages__",
    ],
}

// Java classes that are used by both device-side and host-side tests
filegroup {
    name: "adservices-test-utility-sideless-sources",
    srcs: [
        "side-less/**/*.java",
    ],
    path: "side-less",
    visibility: [
        ":__pkg__",
    ],
}

android_library {
    name: "adservices-test-utility",
    sdk_version: "module_current",
    min_sdk_version: "30",
    srcs: [
        ":adservices-test-utility-sideless-sources",
        ":adservices-test-utility-sources",
        ":adservices-service-core-phflags-sources",
        // TODO(b/345219434): should use java-defaults instead of manually including
        // the 2 sources below
        ":adservices-extended-mockito-rule-sources",
        ":adservices-shared-extended-mockito-rule-sources",
    ],
    libs: [
        "error_prone_annotations",
        "framework-adservices-lib",
        "framework-annotations-lib",
        "framework-configinfrastructure.stubs.module_lib",
        "junit",
    ],
    static_libs: [
        "auto_value_annotations",
        // TODO(b/338132355): Clean up dependencies for adservices-test-utility.
        "adservices-service-core",
        "adservices-shared-mockito-expectations", // TODO(b/338132355): should not be needed if mocker is split
        "adservices-shared-testing",
        "androidx.test.runner",
        "compatibility-device-util-axt",
        "modules-utils-preconditions",
        "adservices-shared-util", // For checkState method uses varargs.
        "adservices-clients",
        // TODO(b/345219434): remove dependency below (and/or replace it by
        // modules-utils-extended-mockito-rule) and move it to test projects
        // instead (as it's only needed by tests that uses the static fixture)
        "modules-utils-testable-device-config",
        // TODO(b/345219434): should use java-defaults instead of manually including
        "adservices-shared-static-class-checker",
    ],
    apex_available: [
        "com.android.adservices",
        "com.android.extservices",
    ],
    visibility: [
        "//packages/modules/AdServices:__subpackages__",
        "//vendor:__subpackages__", // used by some integration tests
    ],
    lint: {
        extra_check_modules: ["AdServicesTestLintChecker"],
    },
    plugins: ["auto_annotation_plugin"],
}

java_library_host {
    name: "adservices-host-side-test-utility",
    srcs: [
        "host-side/**/*.java",
        ":adservices-service-core-flags-constants-sources",
        ":adservices-test-utility-sideless-sources",
    ],
    static_libs: [
        "compatibility-host-util",
        "adservices-shared-hostside-testing",
    ],
    libs: [
        "tradefed",
        "framework-annotations-lib",
    ],
}

// TODO(b/338132355): remove / split / create new lib for expectations
filegroup {
    name: "adservices-extended-mockito-rule-sources",
    srcs: [
        // Non-static - interface and implementation
        "java/com/android/adservices/mockito/AdServicesPragmaticMocker.java",
        "java/com/android/adservices/mockito/AdServicesMockitoMocker.java",
        // Static - interface and implementation
        "java/com/android/adservices/mockito/AdServicesStaticMocker.java",
        "java/com/android/adservices/mockito/AdServicesExtendedMockitoMocker.java",
        // Job-related - interface and implementation
        "java/com/android/adservices/mockito/AdServicesJobMocker.java",
        // ... and implementation
        "java/com/android/adservices/mockito/AdServicesMockitoJobMocker.java",
        // Flags-related - interface and implementation
        "java/com/android/adservices/mockito/AdServicesFlagsMocker.java",
        "java/com/android/adservices/mockito/AdServicesDebugFlagsMocker.java",
        // ... and implementation
        "java/com/android/adservices/mockito/AdServicesMockitoFlagsMocker.java",
        "java/com/android/adservices/mockito/AdServicesMockitoDebugFlagsMocker.java",
    ],
    path: "java",
    visibility: [
        "//packages/modules/AdServices:__subpackages__",
    ],
}

java_defaults {
    name: "adservices-extended-mockito-defaults",
    srcs: [
        ":adservices-extended-mockito-rule-sources",
    ],
    defaults: ["adservices-shared-extended-mockito-defaults"],
    static_libs: [
        "adservices-service-core",
        "modules-utils-testable-device-config", // For TestableDeviceConfig
    ],
    visibility: [
        "//packages/modules/AdServices:__subpackages__",
    ],
}
