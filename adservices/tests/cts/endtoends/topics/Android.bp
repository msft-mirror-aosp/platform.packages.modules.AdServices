package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

java_defaults {
    name: "cts-adservices-endtoend-defaults",
    srcs: [
        "src/**/*.java",
    ],
    static_libs: [
        "androidx.concurrent_concurrent-futures",
        "compatibility-device-util-axt", // Needed for ShellUtils.runShellCommand
        "truth",
        "adservices-clients",
        "adservices-test-utility",
        "framework-adservices-lib",
    ],
    libs: [
        "android.test.base.stubs.system",
        "framework-adservices.stubs.module_lib",
        "framework-sdksandbox.impl",
    ],
    sdk_version: "module_current",
}

android_test {
    name: "CtsAdServicesEndToEndTests",
    team: "trendy_team_android_rubidium",
    defaults: ["cts-adservices-endtoend-defaults"],
    test_suites: [
        "cts",
        "general-tests",
        "mts-adservices",
        "mcts-adservices",
    ],
    min_sdk_version: "Tiramisu",
    manifest: "CtsAdServicesEndToEndTestsManifest.xml",
    test_config: "CtsAdServicesEndToEndTests.xml",
    lint: {
        extra_check_modules: ["AdServicesTestLintChecker"],
        test: false, // TODO(b/343741206): remove when checks will run on android_test
    },
}

android_test {
    name: "CtsAdExtServicesEndToEndTests",
    defaults: ["cts-adservices-endtoend-defaults"],
    test_suites: [
        "cts",
        "general-tests",
        "mts-extservices",
        "mcts-extservices",
    ],
    min_sdk_version: "31",
    max_sdk_version: "32",
    manifest: "CtsAdExtServicesEndToEndTestsManifest.xml",
    test_config: "CtsAdExtServicesEndToEndTests.xml",
    lint: {
        extra_check_modules: ["AdServicesTestLintChecker"],
        test: false, // TODO(b/343741206): remove when checks will run on android_test
    },
}
