package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

java_defaults {
    name: "enrollment_defaults",
    team: "trendy_team_android_rubidium",
    srcs: [
        "src/**/*.java",
    ],
    static_libs: [
        "androidx.test.runner",
        "adservices-assets",
        "adservices-service-core",
        "adservices-test-utility",
        "adservices-ui-cts-root-test-lib",
        "platform-test-rules",
        "truth",
    ],
    libs: [
        "android.test.base.stubs.system",
        "android.test.runner.stubs.system",
        "framework-adservices-lib",
    ],
    test_suites: [
        "general-tests",
    ],
    sdk_version: "module_current",
    lint: {
        extra_check_modules: ["AdServicesTestLintChecker"],
        test: false, // TODO(b/343741206): remove when checks will run on android test
    },
}

android_test {
    name: "AdServicesEnrollmentTest",
    defaults: ["enrollment_defaults"],
    min_sdk_version: "33",
    manifest: "AndroidManifest.xml",
    test_config: "AndroidTest.xml",
}

android_test {
    name: "AdExtServicesEnrollmentTest",
    defaults: ["enrollment_defaults"],
    min_sdk_version: "31",
    max_sdk_version: "32",
    test_config: "AndroidTest.ExtServices.xml",
    manifest: "AndroidManifestExtServices.xml",
}
