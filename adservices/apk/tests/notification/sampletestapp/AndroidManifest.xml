<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.adservices.samples.ui.sampletestapp">
    <uses-permission android:name="android.permission.MODIFY_ADSERVICES_STATE" />
    <application android:debuggable="true"
                 android:allowBackup="true"
                 android:label="@string/app_name"
                 android:supportsRtl="true"
                 android:sharedUserId ="android.uid.system"
                 android:protectionLevel="signature|configurator"
                 android:description="@string/app_description"
                 android:theme="@style/Theme.AppCompat">
        <uses-library android:name="android.ext.adservices" android:required="false"/>

        <receiver
            android:name="com.example.adservices.samples.ui.sampletestapp.MyBroadcastReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.adservices.common.action.ADSERVICES_NOTIFICATION_DISPLAYED" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.example.adservices.samples.ui.sampletestapp.MainActivity"
            android:exported="true">
            <intent-filter>
                <action
                    android:name="android.adservices.common.action.VIEW_ADSERVICES_CONSENT_PAGE"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
