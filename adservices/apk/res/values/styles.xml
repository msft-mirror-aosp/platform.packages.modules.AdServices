<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- **************************************************
    MAIN STYLES
    *************************************************** -->
    <style name="MainStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MainStyle.SettingsControlButton" parent="android:Widget.DeviceDefault.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">16sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:fontFamily">@*android:string/config_bodyFontFamilyMedium</item>
    </style>

<!--    <style name="MainStyle.NotificationPrimaryButton" parent="android:Widget.Material.Button">-->
    <style name="MainStyle.NotificationPrimaryButton">
        <item name="android:theme">@style/RoundedCornerThemeOverlay</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@*android:string/config_bodyFontFamilyMedium</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:backgroundTint">#D4E3FF</item>
        <item name="android:colorControlHighlight">@color/ripple_material_inverse</item>
    </style>

    <style name="RoundedCornerThemeOverlay">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:minWidth">32dp</item>
        <item name="android:buttonCornerRadius">24dp</item>
    </style>

    <!-- **************************************************
    FONT STYLES
    *************************************************** -->
    <style name="MainStyle.H1">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textAppearance">@style/TextAppearance.H1</item>
    </style>

    <style name="MainStyle.H5">
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:textAppearance">@style/TextAppearance.H5</item>
    </style>

    <style name="MainStyle.H6">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textAppearance">@style/TextAppearance.H6</item>
    </style>

    <style name="MainStyle.Body1">
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Body1</item>
    </style>

    <style name="MainStyle.Body1BoldBullet">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Body1.Bold</item>
    </style>

    <style name="MainStyle.Body1BulletSubtext">
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Body1</item>
    </style>

    <style name="MainStyle.Body2">
        <item name="android:textAppearance">@style/TextAppearance.Body2</item>
    </style>

    <style name="MainStyle.Body2BoldBullet">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Body2.Bold</item>
    </style>

    <style name="MainStyle.Body2BulletSubtext">
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Body2</item>
    </style>

    <style name="TextAppearance" parent="android:TextAppearance.DeviceDefault">
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="TextAppearance.H1">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="TextAppearance.H4">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.H5">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.H6">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Body1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Body1.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Body2">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Body2.Bold">
        <item name="android:textStyle">bold</item>
    </style>
</resources>
