// Filegroup for the profile proto definition that enables referencing it elsewhere.
package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

filegroup {
    name: "concurrent-profile-proto-def",
    srcs: [ "src/**/concurrent_profile.proto", ],
}

java_library_static {
    name: "concurrent-longevity-device-lib",
    srcs: [
        "src/**/*.java",
        "src/**/*.proto",
         ],
    proto: {
        type: "lite",
        include_dirs: [ "external/protobuf/src" ],
    },
    static_libs: [
        "adservices-shared-testing",
        "longevity-device-lib",
    ],
    libs: [
        "androidx.test.runner",
        "common-platform-scenarios",
        "guava",
        "platform-test-composers",
        "platform-test-rules",
        "microbenchmark-device-lib"
    ],
    min_sdk_version: "30",
}