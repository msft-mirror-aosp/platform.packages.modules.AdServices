package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

filegroup {
    name: "framework-adservices-sources",
    defaults: ["framework-sources-module-defaults"],
    srcs: [
      "java/**/*.aidl",
      "java/**/*.java"
    ],
    visibility: [
        "//packages/modules/AdServices/adservices:__subpackages__",
        "//packages/modules/ExtServices/apex:__subpackages__",
    ],
    path: "java",
}

java_sdk_library {
    name: "framework-adservices",
    srcs: [":framework-adservices-sources"],
    libs: [
        "modules-utils-preconditions",
        "framework-sdksandbox.impl",
        "androidx.annotation_annotation",
        "error_prone_annotations",
    ],
    static_libs : [
        "adservices-shared-exceptions",
    ],
    sdk_version: "module_current",
    min_sdk_version: "30",
    permitted_packages: [
        "com.android.adservices",
        "android.adservices",
        "android.app.adservices",
    ],
    defaults: ["framework-module-defaults"],
    impl_library_visibility: [
        "//packages/modules/AdServices:__subpackages__",
    ],
    apex_available: ["com.android.adservices", "com.android.extservices"],
}

java_library {
    name: "framework-adservices-lib",
    srcs: [":framework-adservices-sources"],
    libs: [
        "modules-utils-preconditions",
        "framework-sdksandbox.impl",
        "androidx.annotation_annotation",
        "error_prone_annotations",
    ],
    static_libs : [
        "adservices-shared-exceptions",
    ],
    min_sdk_version: "30",
    defaults: ["framework-module-defaults"],
}

java_api_contribution {
    name: "framework-adservices-public-stubs",
    api_surface: "public",
    api_file: "api/current.txt",
    visibility: [
        "//build/orchestrator/apis",
    ],
}

java_library {
    name: "android.ext.adservices",
    static_libs: ["framework-adservices.impl"],
    installable: true,
    provides_uses_lib: "android.ext.adservices",
    sdk_version: "module_current",
    min_sdk_version: "30",
    max_sdk_version: "32",
    visibility: [
        "//external/chromium-webview:__subpackages__",
        "//packages/modules/AdServices:__subpackages__",
        "//packages/modules/ExtServices:__subpackages__",
        "//vendor:__subpackages__",
    ],
    apex_available: ["com.android.extservices"],
}


// TODO(b/323998237): temp library, is auto-generated by aconfig on main
filegroup {
    name: "adservices_flags_lib-sources",
    srcs: [
      "java/com/android/adservices/flags/Flags.java"
    ],
    visibility: [
        "//packages/modules/AdServices/adservices/adservices/tests/unittest/service-core/__pkg__",
    ],
    path: "java",
}
java_library {
    name: "adservices_flags_lib",
    srcs: [":adservices_flags_lib-sources"],
}
