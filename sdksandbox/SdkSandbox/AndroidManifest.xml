<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.sdksandbox"
    android:versionCode="1"
    android:versionName="T-initial">

    <!-- Allows SdkSandbox to start activities. -->
    <!-- TODO(b/209599396): temporary workaround, remove once proper solution is implemented. -->
    <uses-permission android:name="android.permission.START_ACTIVITIES_FROM_BACKGROUND"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!-- Permissions to access PP APIs. -->
    <!-- TODO(b/213488783): Remove these after adding a check in PP APIs for SDK manifest -->
    <uses-permission android:name="android.permission.ACCESS_ADSERVICES_TOPICS" />
    <uses-permission android:name="android.permission.ACCESS_ADSERVICES_ATTRIBUTION" />
    <uses-permission android:name="android.permission.ACCESS_ADSERVICES_CUSTOM_AUDIENCE" />
    <uses-permission android:name="android.permission.ADSERVICES_ACCESS_AD_ID" />
    <uses-permission android:name="android.permission.ADSERVICES_ACCESS_APP_SET_ID" />

    <application android:usesNonSdkApi="false" android:forceQueryable="true">
        <service android:name=".SdkSandboxServiceImpl" android:exported="true">
            <intent-filter>
                <action android:name="com.android.sdksandbox.SdkSandboxService"/>
            </intent-filter>
        </service>
        <property android:name="android.internal.PROPERTY_NO_APP_DATA_STORAGE"
                  android:value="true" />
    </application>

</manifest>
