<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/back_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/disable_back"/>

        <Button
            android:id="@+id/portrait_orientation_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/portrait_orientation"/>

        <Button
            android:id="@+id/landscape_orientation_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/landscape_orientation"/>

        <Button
            android:id="@+id/destroy_activity_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/destroy_activity"/>

        <Button
            android:id="@+id/landing_page_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/open_landing_page"/>

        <TextView
            android:id="@+id/x_axis_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <LinearLayout
            android:id="@+id/media_view_container"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>

    </LinearLayout>
</RelativeLayout>
