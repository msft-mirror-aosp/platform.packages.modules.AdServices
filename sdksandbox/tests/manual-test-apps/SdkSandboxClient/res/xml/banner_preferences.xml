<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        app:key="banner_view_category"
        app:title="@string/view">
        <ListPreference
            app:key="banner_view_type"
            app:title="@string/view_type"
            app:useSimpleSummaryProvider="true"
            android:entries="@array/banner_view_type"
            android:entryValues="@array/banner_view_type_values"
            android:defaultValue="RANDOM_COLOUR"
        />
        <EditTextPreference
            app:key="banner_video_url"
            app:title="@string/video_url"
            app:useSimpleSummaryProvider="true"
        />
        <EditTextPreference
            app:key="banner_image_url"
            app:title="@string/image_url"
            app:useSimpleSummaryProvider="true"
            android:defaultValue="@string/default_image_url"
        />
    </PreferenceCategory>

    <PreferenceCategory
        app:key="banner_behaviour_category"
        app:title="@string/behaviour">
        <ListPreference
            app:key="banner_on_click"
            app:title="@string/on_click"
            app:useSimpleSummaryProvider="true"
            android:entries="@array/banner_on_click"
            android:entryValues="@array/banner_on_click_values"
            android:defaultValue="OPEN_CHROME"
        />
        <EditTextPreference
            app:key="package_to_open"
            app:title="@string/on_click_package"
            app:useSimpleSummaryProvider="true"
        />
    </PreferenceCategory>

    <PreferenceCategory
        app:key="banner_positioning"
        app:title="@string/positioning">
        <ListPreference
            app:key="banner_placement"
            app:title="@string/placement"
            app:useSimpleSummaryProvider="true"
            android:entries="@array/banner_placement"
            android:entryValues="@array/banner_placement_values"
            android:defaultValue="BOTTOM"
        />
    </PreferenceCategory>

    <PreferenceCategory
        app:key="banner_size"
        app:title="@string/size">
        <ListPreference
            app:key="banner_ad_size"
            app:title="@string/ad_size"
            app:useSimpleSummaryProvider="true"
            android:entries="@array/banner_ad_size"
            android:entryValues="@array/banner_ad_size_values"
            android:defaultValue="SMALL"
        />
    </PreferenceCategory>

</PreferenceScreen>