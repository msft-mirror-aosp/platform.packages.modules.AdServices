        "androidx.coordinatorlayout_coordinatorlayout",
        "androidx.media3.media3-common",
        "androidx.media3.media3-exoplayer",
        "androidx.media3.media3-ui",
        "androidx.preference_preference",
        "modules-utils-backgroundthread",
        "modules-utils-build",
