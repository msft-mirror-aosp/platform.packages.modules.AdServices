    resource_dirs: ["res"],
    manifest: "AndroidManifest_Client.xml",
    test_suites: ["general-tests"],
    min_sdk_version: "33",
    target_sdk_version: "33",
    visibility: [
        "//packages/modules/AdServices:__subpackages__",
        "//platform_testing:__subpackages__",
    ],
