package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

java_test_host {
    name: "SdkSandboxSmallModuleHostTest",
    srcs: [
        "src/**/*.java",
    ],
    test_config: "SdkSandboxSmallModuleHostTest.xml",
    libs: [
        "tradefed",
    ],
    static_libs: [
        "modules-utils-build-testing",
        "cts-install-lib-host",
        "SdkSandboxHostTestUtils",
    ],
    data: [
        ":SdkSandboxSmallModuleTestApp",
    ],
    test_suites: ["general-tests"],
}

android_test_helper_app {
    name: "SdkSandboxSmallModuleTestApp",
    srcs: [
        "app/src/**/*.java",
    ],
    manifest: "app/SdkSandboxSmallModuleTestAppManifest.xml",
    static_libs: [
        "androidx.core_core",
        "androidx.test.ext.junit",
        "cts-install-lib",
    ],
    libs: [
        "framework-adservices.impl",
    ],
    java_resources: [
        ":com.android.adservices.fullmodule",
        ":com.android.adservices.smallmodule",
    ],
    min_sdk_version: "33",
    target_sdk_version: "33",
    test_suites: ["general-tests"],
}

override_apex {
    name: "com.android.adservices.smallmodule",
    base: "com.android.adservices",
    apps: ["SdkSandbox"],
    package_name: "com.android.adservices",
    certificate: ":com.android.adservices.certificate",
    key: "com.android.adservices.key",
    compressible: false,
}

override_apex {
    name: "com.android.adservices.fullmodule",
    base: "com.android.adservices",
    apps: ["AdServicesApk", "SdkSandbox"],
    package_name: "com.android.adservices",
    certificate: ":com.android.adservices.certificate",
    key: "com.android.adservices.key",
    compressible: false,
}
