package {
    default_team: "trendy_team_rubidium_sdk_runtime",
    default_applicable_licenses: ["Android-Apache-2.0"],
}

java_test_host {
    name: "SdkSandboxRestrictionsHostTest",
    srcs: ["src/**/SdkSandboxRestrictionsHostTest.java"],
    libs: [
        "tradefed",
    ],
    static_libs: [
        "cts-install-lib-host",
        "modules-utils-build-testing",
        "SdkSandboxHostTestUtils",
    ],
    test_suites: ["general-tests"],
    device_common_data: [
        ":RestrictionsProvider",
        ":SdkSandboxRestrictionsTestApp",
    ],
}

android_test_helper_app {
    name: "SdkSandboxRestrictionsTestApp",
    manifest: "app/AndroidTest.xml",
    srcs: [
        "app/src/**/SdkSandboxRestrictionsTestApp.java",
        ":framework-sdksandbox-sources",
        ":sdksandbox_aidl",
        ":sdksandbox-sources",
    ],
    defaults: ["framework-sdksandbox-jarjar-defaults"],
    static_libs: [
        "androidx.core_core",
        "androidx.test.ext.junit",
        "androidx.test.rules",
        "compatibility-device-util-axt",
        "SdkSandboxTestUtils",
        "RestrictionsSdkApi",
    ],
    min_sdk_version: "33",
    target_sdk_version: "33",
    test_suites: ["general-tests"],
}
