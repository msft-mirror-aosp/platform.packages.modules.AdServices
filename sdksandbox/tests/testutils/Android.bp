package {
    default_team: "trendy_team_rubidium_sdk_runtime",
    default_applicable_licenses: ["Android-Apache-2.0"],
}

filegroup {
    name: "sdksandbox-test-utility-sideless-sources",
    srcs: [
        "side-less/**/*.java",
    ],
    path: "side-less",
    visibility: [
        ":__pkg__",
    ],
}

java_library {
    name: "SdkSandboxTestUtils",
    srcs: [
        "device-side/**/*.java",
        ":sdksandbox-test-utility-sideless-sources",
    ],
    libs: [
        "framework-sdksandbox.impl",
    ],
    static_libs: [
        "service-sdksandbox.impl",
        "adservices-test-utility",
        "truth",
        "androidx.test.ext.junit",
        "SdkSandbox-java-lib",
        "platform-screenshot-diff-core",
        "modules-utils-build",
    ],
    visibility: [
        "//packages/modules/AdServices:__subpackages__",
    ],
}

java_library_host {
    name: "SdkSandboxHostTestUtils",
    srcs: [
        "host-side/**/*.java",
        ":sdksandbox-test-utility-sideless-sources",
    ],
    static_libs: [
        "adservices-shared-hostside-testing",
        "compatibility-host-util",
        "modules-utils-build-testing",
    ],
    libs: ["tradefed"],
}
