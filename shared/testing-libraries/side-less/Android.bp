    default_applicable_licenses: ["Android-Apache-2.0"],
}

// Java classes that are used by both device-side and host-side test libraries
// NOTE: cannot create a proper "library", as it would be "java_library" on
// device-side and "java_library_host" on host-side. Hence, projects including
// filegroup should add the following dependencies
//     "error_prone_annotations", // @FormatMethod / @FormatString
//     "junit",
//   - device:
//      "guava", // @VisibleForTesting
//   - host
//      "guava-android-host", // @VisibleForTesting
filegroup {
    name: "adservices-shared-sideless-testing-sources",
    srcs: [
        "java/com/android/adservices/shared/testing/**/*.java",
    ],
    visibility: [
        "//packages/modules/AdServices/shared/testing-libraries:__subpackages__",
    ],
}

filegroup {
    name: "adservices-shared-sideless-testing-TestNamer-sources",
    srcs: [
        "java/com/android/adservices/shared/testing/TestNamer.java",
    ],
    visibility: [
        "//packages/modules/AdServices/shared/testing-libraries:__subpackages__",
    ],
}

// Shared test classes used to test shared test classes - Malkovich!
filegroup {
    name: "adservices-shared-sideless-meta-testing-sources",
    srcs: [
        "java/com/android/adservices/shared/meta_testing/**/*.java",
    ],
    visibility: [
        "//packages/modules/AdServices/shared/tests:__subpackages__",
        // Explicitly add each package below - don't use __subpackages__
        "//packages/modules/AdServices/adservices/tests/unittest/adservices-test-utility",
    ],
}
